#nav.max-width(ng-include="'views/partials/header.html'")

.container.pvxl.prevent-affix
  .row.text-center
    .col-md-12
      h2.em(blanchemaille) Contactez-nous

      .hr.blanchemaillish

  .row
    .col-md-8.col-md-offset-2
      form(name='contactForm', novalidate)
        .form-group
          label.control-label Votre email
          input.form-control(name='from', ng-model='contact.from', ng-required='true', type='email')

        .row
          .col-sm-6
            .form-group
              label.control-label Votre prénom
              input.form-control(name='firstname', ng-model='contact.firstname', ng-required='true', type='text')

          .col-sm-6
            .form-group
              label.control-label Votre nom
              input.form-control(name='lastname', ng-model='contact.lastname', ng-required='true', type='text')

        .form-group
          label.control-label Votre message
          textarea.form-control(name='body', ng-model='contact.body', rows='5')

      .row.mtxl
        .col-md-6.col-md-offset-3.text-center
          .progress-button(loading-button, lb-completed='isSent', lb-value='loaded', ng-click='send(contactForm)')
            button
              span.default Envoyer
              span.error Erreur
              span.success Message envoyé :)

