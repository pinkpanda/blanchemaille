#nav.max-width(ng-include="'views/partials/header.html'")

.container.pvxl.prevent-affix
  .row
    .col-md-8.white.phl.pvxl.mbl
      .row
        .col-md-6.col-md-offset-3
          img.max-width(src='{{organization.image.image.thumb.url}}', api-path)

      .row
        .col-md-12.text-center
          h2.em
            | A propos de&nbsp;
            span.blanchemaille {{organization.name}}

          .hr.blanchemaillish

      .row
        .col-md-12
          p.text-justify A venir

          blockquote.small.text-justify
            {{organization.ceo_bio}}

            footer {{organization.ceo_name}}

          .text-center.mtxl
            a.btn.btn-blanchemaillish.btn-inverse.mrl(ng-href='{{organization.link}}') Acc√®der au site
            a.btn.btn-blanchemaillish.btn-inverse(ng-href='mailto:{{organization.email}}') Les contacter

    .col-md-3.col-md-offset-1.white.text-center
      .row
        .col-md-12.ptm
          google-map.m-organization--map(center='map.center', options='map.options', zoom='map.zoom')
            marker(coords='map.marker')

        .col-md-12.phl.pvl
          .row.mbm(ng-show='organization.ceo_name')
            .col-xs-2
              .fa.fa-user.ball.blanchemaillish.m-organization--info.mtm.mbl

            .col-xs-10
              p.h4.mtx Nom du contact
              p {{organization.ceo_name}}

          .row.mbm(ng-show='organization.nb_employees')
            .col-xs-2
              .fa.fa-globe.ball.blanchemaillish.m-organization--info.mtm.mbl

            .col-xs-10
              p.h4.mtx Effectif
              p(count-to='{{organization.nb_employees}}', duration='3', value='0')

          .row(ng-show='organization.sector')
            .col-xs-2
              .fa.fa-dot-circle-o.ball.blanchemaillish.m-organization--info.mtm.mbl

            .col-xs-10
              p.h4.mtx Secteur
              p {{organization.sector}}
