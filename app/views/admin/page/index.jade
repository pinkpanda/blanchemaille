.space

.peter-river
  .container
    .row.mvl
      .col-md-10.col-md-offset-1
        div(ng-include="'views/admin/page/form.html'")

.container.mvxl
  .row
    .col-md-6.col-md-offset-3.mbxl
      input.form-control(ng-model='search', type='text', placeholder='Rechercher')

  .row
    table.table.table-striped
      tr
        th Titre
        th Contenu
        th

      tr(ng-repeat='page in pages | filter:search | orderBy:"title"')
        td {{page.title}}
        td
          span(ng-if='page.content') {{page.content | stripHtml | characters:130}}
        td
          a.btn.btn-info.btn-inverse(ui-sref='admin.pages.edit({ id: page.id })') Editer
