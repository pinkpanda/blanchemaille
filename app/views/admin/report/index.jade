.container-fluid.mvxl
  .row
    .col-md-6.col-md-offset-3.mbxl
      input.form-control(ng-model='search', type='text', placeholder='Rechercher')

  .row
    div(ng-repeat='report in reports | filter:search | orderBy:"-created_at"')
      .col-md-3
        .m-report.mbl.light-gray
          .m-report--header.text-center(ui-sref='admin.reports.edit({ id: report.id })')
            h3.text-black.pos-absolute-center.max-width {{report.title}}

          a.btn.btn-info.btn-inverse.btn-block.mtl(ui-sref='admin.reports.edit({ id: report.id })') Editer
