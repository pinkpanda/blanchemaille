.container-fluid.mvxl
  .row
    .col-md-6.col-md-offset-3.mbxl
      input.form-control(ng-model='search', type='text', placeholder='Rechercher')

  .row
    div(ng-repeat='newspaper in newspapers | filter:search | orderBy:"-created_at"')
      .col-md-3
        .m-newspaper.mbl.light-gray
          .m-newspaper--header.text-center(ui-sref='admin.newspapers.edit({ id: newspaper.id })')
            .m-newspaper--image.max-width.pos-absolute
              img.max-width(src='{{newspaper.image.image.thumb.url}}', api-path)

            h3.text-white.pos-absolute-center.max-width {{newspaper.title}}

          .m-newspaper--content.pvl.phl
            p.text-justify {{newspaper.content | characters:200}}

            .text-right
              em.m-newspaper--name {{newspaper.newspaper_name}}

            a.btn.btn-info.btn-inverse.btn-block.mtl(ui-sref='admin.newspapers.edit({ id: newspaper.id })') Editer
